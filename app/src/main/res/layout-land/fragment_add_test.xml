<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7F7F7F"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvTestName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/test"
        android:textColor="@color/textColor"
        android:textSize="28sp" />

    <EditText
        android:id="@+id/etTestName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/test_name"
        android:inputType="textPersonName"
        android:textColor="@color/textColor"
        android:background="@color/secondColor"/>


    <TextView
        android:id="@+id/tvTestDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/test_date"
        android:textColor="@color/textColor"
        android:textSize="@dimen/big_text_size" />

    <EditText
        android:id="@+id/etTestDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/test_date_hint"
        android:inputType="date|textPersonName"
        android:textColor="@color/textColor"
        android:background="@color/secondColor"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/bCancleTest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/cancel"
            android:textColor="@color/textColor" />

        <Button
            android:id="@+id/ibAddTest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@android:string/ok"
            android:textColor="@color/textColor" />

    </LinearLayout>
</LinearLayout>